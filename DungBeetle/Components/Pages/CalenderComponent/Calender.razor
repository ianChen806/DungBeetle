@using DungBeetle.Applications.WorkSchedule
@inherits CalenderBase
@attribute [StreamRendering]

<table class="calendar table table-bordered">
	<thead>
	<tr>
		<th scope="col">Sun</th>
		<th scope="col">Mon</th>
		<th scope="col">Tue</th>
		<th scope="col">Wed</th>
		<th scope="col">Thu</th>
		<th scope="col">Fri</th>
		<th scope="col">Sat</th>
	</tr>
	</thead>
	<tbody>
	@{ var day = 1; }
	@foreach (var members in Weeks())
	{
		<tr>
			@foreach (var workDay in members)
			{
				if (workDay.First is null)
				{
					<td></td>
				}
				else
				{
					<td style="text-align: left">
						<span class="tdCol" style="text-align: center">@day</span>
						<span class="tdCol">1. @workDay.First</span>
						<span class="tdCol">2. @workDay.Second</span>
					</td>
					day++;
				}
			}
		</tr>
	}
	</tbody>
</table>